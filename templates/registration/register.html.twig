{% extends 'base.html.twig' %}

{% block title %}Ajout des patients
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
	<!-- Container for demo purpose -->
	<div
		class="container my-24 px-6 mx-auto">

		<!-- Section: Design Block -->
		<section class="mb-32 text-gray-800 text-center lg:text-left">
			<div class="px-6 py-12 md:px-12" style="background-color: hsl(0, 0%, 96%)">
				<div class="grid lg:grid-cols-2 gap-12 flex items-center">
					<div class="mt-12 lg:mt-0">
						<h1 class="text-5xl font-bold tracking-tight leading-tight mb-12">
							Ajouter un nouveau
							<br/><span class="text-red-600">patient</span>
						</h1>
						<div class="mb-4">
							<img src="build/images/img2.jpg" class="h-auto max-w-full rounded-full text-center" style="width :400px " alt=""/>
						</div>
					</div>
					<div class="mb-12 lg:mb-0">
						<div class="block rounded-lg shadow-lg bg-white px-6 py-12 md:px-12">

							<div class="form-control">
								<form method="post">
									{{ form_start(registrationForm)}}

									<div class="grid md:grid-cols-2 md:gap-6">
										{# <div class="mb-6"> #}
										<!--First name input-->
											<div class="relative mb-6" data-te-input-wrapper-init> {{ form_widget(registrationForm.nom, { 'attr': {'class': 'peer block min-h-[auto] w-full rounded border-0 bg-transparent px-3 py-[0.32rem] leading-[1.6] outline-none transition-all duration-200 ease-linear focus:placeholder:opacity-100 data-[te-input-state-active]:placeholder:opacity-100 motion-reduce:transition-none dark:text-neutral-200 dark:placeholder:text-neutral-200 [&:not([data-te-input-placeholder-active])]:placeholder:opacity-0'} }) }}
											<label for="exampleInput123" class="pointer-events-none absolute left-3 top-0 mb-0 max-w-[90%] origin-[0_0] truncate pt-[0.37rem] leading-[1.6] text-neutral-500 transition-all duration-200 ease-out peer-focus:-translate-y-[0.9rem] peer-focus:scale-[0.8] peer-focus:text-primary peer-data-[te-input-state-active]:-translate-y-[0.9rem] peer-data-[te-input-state-active]:scale-[0.8] motion-reduce:transition-none dark:text-neutral-200 dark:peer-focus:text-primary" placeholder="Nom">Nom
											</label>
										</div>
										{# <div class="mb-6"> #}
										<!--Last name input-->
										<div class="relative mb-6" data-te-input-wrapper-init>
											{{ form_widget(registrationForm.prenom, { 'attr': {'class': 'peer block min-h-[auto] w-full rounded border-0 bg-transparent px-3 py-[0.32rem] leading-[1.6] outline-none transition-all duration-200 ease-linear focus:placeholder:opacity-100 data-[te-input-state-active]:placeholder:opacity-100 motion-reduce:transition-none dark:text-neutral-200 dark:placeholder:text-neutral-200 [&:not([data-te-input-placeholder-active])]:placeholder:opacity-0'} }) }}
											<label for="exampleInput123" class="pointer-events-none absolute left-3 top-0 mb-0 max-w-[90%] origin-[0_0] truncate pt-[0.37rem] leading-[1.6] text-neutral-500 transition-all duration-200 ease-out peer-focus:-translate-y-[0.9rem] peer-focus:scale-[0.8] peer-focus:text-primary peer-data-[te-input-state-active]:-translate-y-[0.9rem] peer-data-[te-input-state-active]:scale-[0.8] motion-reduce:transition-none dark:text-neutral-200 dark:peer-focus:text-primary" placeholder="Prénom">Prénom
											</label>
										</div>
									</div>
									<!--phone input-->
									<div class="relative mb-6" data-te-input-wrapper-init>
										{{ form_widget(registrationForm.numTelephone, { 'attr': {'class': 'peer block min-h-[auto] w-full rounded border-0 bg-transparent px-3 py-[0.32rem] leading-[1.6] outline-none transition-all duration-200 ease-linear focus:placeholder:opacity-100 data-[te-input-state-active]:placeholder:opacity-100 motion-reduce:transition-none dark:text-neutral-200 dark:placeholder:text-neutral-200 [&:not([data-te-input-placeholder-active])]:placeholder:opacity-0'} }) }}
										<label for="exampleInput123" class="pointer-events-none absolute left-3 top-0 mb-0 max-w-[90%] origin-[0_0] truncate pt-[0.37rem] leading-[1.6] text-neutral-500 transition-all duration-200 ease-out peer-focus:-translate-y-[0.9rem] peer-focus:scale-[0.8] peer-focus:text-primary peer-data-[te-input-state-active]:-translate-y-[0.9rem] peer-data-[te-input-state-active]:scale-[0.8] motion-reduce:transition-none dark:text-neutral-200 dark:peer-focus:text-primary" placeholder="Email">Numéro de téléphone
										</label>
									</div>
									<!--Email input-->
									<div class="relative mb-6" data-te-input-wrapper-init>
										{{ form_widget(registrationForm.email, { 'attr': {'class': 'peer block min-h-[auto] w-full rounded border-0 bg-transparent px-3 py-[0.32rem] leading-[1.6] outline-none transition-all duration-200 ease-linear focus:placeholder:opacity-100 data-[te-input-state-active]:placeholder:opacity-100 motion-reduce:transition-none dark:text-neutral-200 dark:placeholder:text-neutral-200 [&:not([data-te-input-placeholder-active])]:placeholder:opacity-0'} }) }}
										<label for="exampleInput123" class="pointer-events-none absolute left-3 top-0 mb-0 max-w-[90%] origin-[0_0] truncate pt-[0.37rem] leading-[1.6] text-neutral-500 transition-all duration-200 ease-out peer-focus:-translate-y-[0.9rem] peer-focus:scale-[0.8] peer-focus:text-primary peer-data-[te-input-state-active]:-translate-y-[0.9rem] peer-data-[te-input-state-active]:scale-[0.8] motion-reduce:transition-none dark:text-neutral-200 dark:peer-focus:text-primary" placeholder="Email">Email
										</label>
									</div>
									<!--Password input-->
									<div class="relative mb-6" data-te-input-wrapper-init>
										{{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'peer block min-h-[auto] w-full rounded border-0 bg-transparent px-3 py-[0.32rem] leading-[1.6] outline-none transition-all duration-200 ease-linear focus:placeholder:opacity-100 data-[te-input-state-active]:placeholder:opacity-100 motion-reduce:transition-none dark:text-neutral-200 dark:placeholder:text-neutral-200 [&:not([data-te-input-placeholder-active])]:placeholder:opacity-0'} }) }}
										<label for="exampleInput123" class="pointer-events-none absolute left-3 top-0 mb-0 max-w-[90%] origin-[0_0] truncate pt-[0.37rem] leading-[1.6] text-neutral-500 transition-all duration-200 ease-out peer-focus:-translate-y-[0.9rem] peer-focus:scale-[0.8] peer-focus:text-primary peer-data-[te-input-state-active]:-translate-y-[0.9rem] peer-data-[te-input-state-active]:scale-[0.8] motion-reduce:transition-none dark:text-neutral-200 dark:peer-focus:text-primary" placeholder="Mot de passe">Mot de passe
										</label>
									</div>
									<div class="form-check flex justify-center mb-6">
										{{ form_widget(registrationForm.agreeTerms, { 'attr': {'class': 'relative float-left -ml-[1.5rem] mr-[6px] h-[1.125rem] w-[1.125rem] border-0 bg-transparent px-3 py-[0.32rem] leading-[1.6] outline-none transition-all duration-200 ease-linear focus:placeholder:opacity-100 data-[te-input-state-active]:placeholder:opacity-100 motion-reduce:transition-none dark:text-neutral-200 dark:placeholder:text-neutral-200 [&:not([data-te-input-placeholder-active])]:placeholder:opacity-0'} }) }}
										<label class="inline-block pl-[0.15rem] hover:cursor-pointer" for="exampleCheck25">
											Accepter nos termes
										</label>
									</div>
									<button type="submit" data-mdb-ripple="true" data-mdb-ripple-color="light" class="inline-block px-6 py-2.5 mb-6 w-full bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out" style="background: linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);">
										Créer
									</button>
									{{ form_end(registrationForm)}}
								</form>

							</div>
						</div>
					</div>
				</div>
			</section>
			<!-- Section: Design Block -->

		</div>
		<!-- Container for demo purpose -->
	{% endblock %}
	{% block javascripts %}
		{{ encore_entry_script_tags('app') }}
	{% endblock %}
